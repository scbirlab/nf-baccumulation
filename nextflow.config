manifest {

    author          = "Eachan Johnson"
    homePage        = "https://github.com/scbirlab/nf-baccumulation"
    description     = "Process files from TargetLynx for intracellular accumulation."
    defaultBranch   = "v0.0.1"
    nextflowVersion = '!>=24.0.0'
    version         = "0.0.1"
    doi             = ''

}

params {

    help = false
    test = false

    // required
    sample_sheet = null
    positive = null
    negative = null

    // optional
    inputs = "inputs"
    outputs = "outputs"
    control_column = "compound_id"
    hit_grouping = "compound_id"
    norm_method = "pon"
    export_layout = "plate"

}

process {
  container = 'ghcr.io/scbirlab/nf-baccumulation:latest'
  containerEngine = 'auto'  // docker, singularity, or podman
  conda = "${projectDir}/environment.yml"
}

conda {
  createTimeout = "3h"
  cacheDir = "${projectDir}/.conda"
}

singularity {
  autoMounts = true
  cacheDir = "${projectDir}/.singularity"
  runOptions = "--network=none"
}

docker {
  cacheDir = "${projectDir}/.docker"
  temp = true  // run in isolated container mount
}

profiles {

  standard {

    singularity.enabled = true

    process {
      executor = 'slurm'

      withLabel: big_cpu {
        cpus = 16
        memory = 64.GB
      }

      withLabel: some_mem {
        memory = 8.GB
      }

      withLabel: med_mem {
        memory = 32.GB
      }

    }

    dag {
      enabled = true
      overwrite = true
    }

    notification {
      enabled = true
      to = "$USER@crick.ac.uk"
    }

  }

  local {

    process {
      executor = 'local'
      memory = 16.GB

      withLabel: big_cpu {
        cpus = 8
      }

    }

  }

  gh {

    docker.enabled = true
    docker.runOptions = '-u 1001:1001'

    process {
      executor = 'local'
      cpus = 1
      memory = 12.GB
    }

  }

}
